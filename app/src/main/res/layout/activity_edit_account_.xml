<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Screens.Account.EditAccount_Activity">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/banneraccount">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/imv_back_editAccountScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_back"
        android:background="@drawable/button_image_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintVertical_bias="0.0" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imv_avatar_editAccountScreen"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/ic_person"
        app:civ_border_color="#000000"
        app:civ_border_width="0.1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_editAva_editAccountScreen"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_editaccount"
        android:text="sửa"
        android:textColor="@color/white"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imv_avatar_editAccountScreen"
        app:layout_constraintEnd_toEndOf="@+id/imv_avatar_editAccountScreen" />
</androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/et_name_editAccountScreen"
        android:layout_margin="15dp"
        android:background="@drawable/edittext_shape"
        android:hint="Họ và tên"
        android:padding="10dp"
        android:fontFamily="@font/robotoregular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/et_phoneNum_editAccountScreen"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edittext_shape"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:maxLength="10"
        android:padding="10dp"
        android:fontFamily="@font/robotoregular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/et_oldPass_editAccountScreen"
        android:layout_margin="15dp"
        android:background="@drawable/edittext_shape"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"
        android:padding="10dp"
        android:fontFamily="@font/robotoregular"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/et_newPass_editAccountScreen"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edittext_shape"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:padding="10dp"
        android:fontFamily="@font/robotoregular"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:id="@+id/btn_confirm_accountScreen"
        android:layout_margin="15dp"
        android:background="@drawable/button_shape"
        android:text="Sửa thông tin"
        android:textSize="20sp"
        android:textColor="#ffffff"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:id="@+id/radio_demo"
        android:paddingHorizontal="15dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/radioItem1"
                android:gravity="center"
                android:background="@drawable/button_account_screen">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconstar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_radioItem1"
                    android:textSize="10sp"
                    android:fontFamily="@font/robotolight"
                    android:textColor="@color/blurblack"
                    android:text="(12)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/radioItem2"
                android:background="@drawable/button_account_screen">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconstar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_radioItem2"
                    android:textSize="10sp"
                    android:fontFamily="@font/robotolight"
                    android:textColor="@color/blurblack"
                    android:text="(12)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:id="@+id/radioItem3"
                android:background="@drawable/button_account_screen">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconstar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_radioItem3"
                    android:textSize="10sp"
                    android:fontFamily="@font/robotolight"
                    android:textColor="@color/blurblack"
                    android:text="(12)"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:id="@+id/radioItem4"
                android:background="@drawable/button_account_screen">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="15dp"
                    android:src="@drawable/iconstar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_radioItem4"
                    android:textSize="10sp"
                    android:fontFamily="@font/robotolight"
                    android:textColor="@color/blurblack"
                    android:text="(12)"/>
            </LinearLayout>
        </LinearLayout>
    </RadioGroup>

</LinearLayout>