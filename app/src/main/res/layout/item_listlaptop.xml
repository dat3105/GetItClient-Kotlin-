<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="7dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_gravity="center"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"

        android:padding="15dp"
        >
        <ImageView
            android:id="@+id/imv_avatarLap_listLapItem"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/hinhnenmac" />

        <TextView
            android:id="@+id/tv_nameLaptop_listLapItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_avatarLap_listLapItem"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotoblack"
            android:text="Vostro"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:textSize="12sp"
            />

<!--        <androidx.appcompat.widget.AppCompatRatingBar-->
<!--            android:id="@+id/ratingBar_listLapItem"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:isIndicator="true"-->
<!--            android:theme="@style/RatingBar"-->
<!--            android:layout_below="@+id/tv_nameLaptop_listLapItem"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:numStars="5"-->
<!--            android:scaleY="0.3"-->
<!--            android:scaleX="0.3"-->
<!--            android:rating="5"/>-->
            <TextView
                android:id="@+id/tv_priceLap_listLapItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/red"
                android:text="2000000 VND"
                android:textStyle="normal"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_amountLap_listLapItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_priceLap_listLapItem"
                android:layout_centerInParent="true"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/robotoregular"
                android:textColor="@color/black"
                android:text="SỐ lượng : 28 chiếc"
                android:textStyle="normal"
                android:textSize="8sp"
                />
    </LinearLayout>

</androidx.cardview.widget.CardView>