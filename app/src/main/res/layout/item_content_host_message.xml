<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_host_date_content"
        android:text="14:28 - 25/06/2020"
        android:textColor="@color/blurblack"
        android:textSize="12sp"
        android:layout_alignParentRight="true"
        android:fontFamily="@font/robotoregular"
       />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/tv_host_mes_content"
    android:text="Tôi là host"
    android:textColor="@color/white"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/tv_host_date_content"
    android:textSize="12sp"
    android:layout_alignParentRight="true"
    android:fontFamily="@font/robotoregular"
    android:background="@drawable/bg_host_content_mes"
    android:padding="10dp"/>
</RelativeLayout>