<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRL_billAcceptedDetail"
    android:background="@drawable/mybackground"
    tools:context=".Screens.Invoice.InvoiceAcceptedDetail_Activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_invoiceAccepted"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/toolbar_shape"
                app:navigationIcon="@drawable/icon_back"
                app:title="CHI TIẾT THANH TOÁN"
                app:titleTextColor="@color/mainColor" />
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@drawable/icon"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET IT"
                android:textSize="15sp"
                android:textColor="#2F85FF"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoregular"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_idInvoice_Accepted"
                android:text="Mã hóa đơn : sjvfsnbJKGBB"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:fontFamily="@font/robotoblack"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"
                android:layout_margin="15dp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin của bạn"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/red"
                android:fontFamily="@font/robotoregular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/button_menu_shape"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:padding="15dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imv_avaUser_billAcceptedDetail"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_person"
                    app:civ_border_color="@color/black"
                    app:civ_border_width="0.5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/robotoblack"
                            android:text="Tên: "
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/tv_userName_billAcceptedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/robotoregular"
                            android:text="a"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/robotoblack"
                            android:textColor="@color/black"
                            android:text="Số diện thoại: "
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/tv_phoneNumber_billAcceptedDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:text="a"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Địa chỉ: "
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoblack"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                        <TextView
                            android:id="@+id/tv_address_billAcceptedDetail"
                            android:layout_width="wrap_content"
                            android:text="a"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/robotoregular"
                            android:textColor="@color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"
                android:layout_margin="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết thanh toán"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/red"
                android:fontFamily="@font/robotoregular"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán : "
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoblack"/>
                <TextView
                    android:id="@+id/tv_sumPrice_billAcceptedDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12.000.000 VNĐ"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoregular"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"
                android:layout_marginHorizontal="15dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết sản phẩm"
                android:textSize="15sp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:textColor="@color/red"
                android:fontFamily="@font/robotoregular"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcView_invoiceAcceptedScreen"
                android:layout_margin="15dp"/>
<!--            <Button-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="55dp"-->
<!--                android:id="@+id/btn_confirm_invoiceAcceptedDetail"-->
<!--                android:layout_marginHorizontal="15dp"-->
<!--                android:background="@drawable/button_shape"-->
<!--                android:text="Xác nhận"-->
<!--                android:layout_marginBottom="15dp"-->
<!--                android:textSize="20sp"-->
<!--                android:textColor="#ffffff"/>-->

        </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>