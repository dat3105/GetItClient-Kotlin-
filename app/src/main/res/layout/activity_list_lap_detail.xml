<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screens.ListLapDetail.ListLapDetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:background="@drawable/splashscreen"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_listLapDetailScreen"
            android:background="@drawable/toolbar_shape"
            app:navigationIcon="@drawable/icon_back"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SẢN PHẨM CHI TIẾT"
                    android:textSize="20sp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/mainColor"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imv_addToCart_listLapDetailScreen"
                    android:src="@drawable/icon_addtocart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_slider_homeScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:cardCornerRadius="7dp">

            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/imageSlider_listLapDetail"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorEnabled="true"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="@color/mainColor"
                app:sliderIndicatorUnselectedColor="#FFF"
                />
        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>

        <TextView
            android:id="@+id/tv_nameLaptop_listLapDetailScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/robotoblack"
            android:text="Tên laptop"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_priceLaptop_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:text="12.000.000 VNĐ"
                android:textStyle="normal"
                android:textColor="@color/red"
                android:textSize="18sp"
                />
            <TextView
                android:id="@+id/tv_amountLaptop_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:layout_marginHorizontal="15dp"
                android:text="Số lượng : 100"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/tv_amountSellLaptop_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:text="Đã bán : 26"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="18sp"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/ratingBar_listLapDetail"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:isIndicator="true"
        android:progressBackgroundTint="@color/mainColor"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:stepSize="0.1" />
    <TextView
        android:id="@+id/tv_numStars_listLapDetailScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="135dp"
        android:layout_marginRight="135dp"
        android:layout_marginBottom="-1dp"
        android:fontFamily="@font/robotoregular"
        android:text="( 5/5 )"
        android:textColor="@color/blurblack"
        android:textSize="18sp"
        android:textStyle="normal" />
</RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/listlapdetail"
            android:layout_gravity="center"/>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:fontFamily="@font/robotoregular"
            android:text="Chi tiết laptop"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/robotoregular"
            android:text="Bộ xử lí"
            android:textStyle="normal"
            android:textColor="@color/red"
            android:textSize="20sp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_boXuLi_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                android:textStyle="normal" />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
<!--   field 1     -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
           >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Công nghệ CPU"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_cpuTech_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
        <!--   field 2     -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Loại CPU"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_kindOfCPU_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
        <!--   field 3     -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Tốc độ CPU"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_cpuSpeed_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
        <!--   field 4     -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ nhớ đệm"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_bo_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
        <!--   field 5     -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Tốc độ tối đa"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/tv_maxSpeed_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/blurblack"
                android:textSize="20sp"
                />
        </RelativeLayout>
        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/blurblack"/>
        <!--   field 6     -->

        <Button
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:id="@+id/btn_watchMore_listLapDetail"
            android:layout_margin="15dp"
            android:background="@drawable/button_shape"
            android:text="Xem thêm"
            android:onClick="showCustomDialog"
            android:textSize="20sp"
            android:textColor="#ffffff"
            tools:ignore="OnClick" />

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_margin="15dp"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/robotoregular"
               android:text="Sản phẩm cùng loại"
               android:textStyle="normal"
               android:textColor="@color/black"
               android:textSize="20sp"
               />
           <TextView
               android:id="@+id/tv_watchMore_listLapDetailScreen"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/robotoregular"
               android:text="Xem thêm  "
               android:layout_alignParentRight="true"
               android:textStyle="normal"
               android:drawableRight="@drawable/icon_watchmore"
               android:textColor="@color/mainColor"
               android:textSize="20sp"
               android:onClick="onClick"
               />
       </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rcView_sameType_listLapDetailScreen"
            android:layout_marginHorizontal="15dp"
            />

    </LinearLayout>
</ScrollView>