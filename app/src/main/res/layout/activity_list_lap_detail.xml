<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipeRL_listLapDetail"
    android:background="@drawable/splashscreen"
    tools:context=".Screens.ListLapDetail.ListLapDetailActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="20dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:id="@+id/toolbar_listLapDetailScreen"
                android:background="@drawable/toolbar_shape"
                app:navigationIcon="@drawable/icon_back"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SẢN PHẨM CHI TIẾT"
                        android:textSize="20sp"
                        android:fontFamily="@font/robotoregular"
                        android:textColor="@color/mainColor"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imv_addToCart_listLapDetailScreen"
                        android:src="@drawable/icon_addtocart"
                        android:background="@drawable/button_image_shape"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_slider_homeScreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="7dp">

                <ImageView
                    android:id="@+id/imv_avaLap_listLapDetail"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>

            <TextView
                android:id="@+id/tv_nameLaptop_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:fontFamily="@font/robotoblack"
                android:layout_gravity="center"
                android:text="Tên laptop"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_nameBrand_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/robotolight"
                android:layout_gravity="center"
                android:text="Hãng laptop"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="15sp"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_priceLaptop_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:text="12.000.000 VNĐ"
                    android:textStyle="normal"
                    android:textColor="@color/red"
                    android:textSize="15sp"
                    />
                <TextView
                    android:id="@+id/tv_amountLaptop_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:layout_marginHorizontal="15dp"
                    android:text="Số lượng : 100"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />
                <TextView
                    android:id="@+id/tv_amountSellLaptop_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:text="Đã bán : 26"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>
                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/ratingBar_listLapDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_gravity="center"
                    android:isIndicator="true"
                    android:theme="@style/RatingBar"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:stepSize="0.1" />
            <TextView
                android:id="@+id/tv_amountRating_listLapDetailScreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoregular"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="( 5/5 )"
                android:textColor="@color/blurblack"
                android:textSize="18sp"
                android:textStyle="normal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/listlapdetail"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:fontFamily="@font/robotomedium"
                android:text="Chi tiết laptop"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:fontFamily="@font/robotoregular"
                android:text="Bộ xử lí"
                android:textStyle="normal"
                android:textColor="@color/red"
                android:textSize="20sp"
                />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Công nghệ CPU"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_cpuTech_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Bộ xử lí"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>
            <!--   field 2     -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Tốc độ CPU"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_cpuSpeed_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Bộ xử lí"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>
            <!--   field 4     -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Bộ nhớ đệm"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_bo_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:fontFamily="@font/robotoregular"
                    android:text="Bộ xử lí"
                    android:textStyle="normal"
                    android:textColor="@color/blurblack"
                    android:textSize="20sp"
                    />
            </RelativeLayout>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>
            <!--   field 5     -->

            <Button
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:id="@+id/btn_watchMore_listLapDetail"
                android:layout_margin="15dp"
                android:background="@drawable/button_shape"
                android:text="Xem thêm"
                android:textSize="20sp"
                android:textColor="#ffffff"
                tools:ignore="OnClick" />
            <View
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/blurblack"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="Đánh giá sản phẩm"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_watchMoreComment_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Xem thêm  "
                    android:layout_alignParentRight="true"
                    android:textStyle="normal"
                    android:drawableRight="@drawable/icon_watchmore"
                    android:textColor="@color/mainColor"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/linear_commentLap_listLapDetail"
                android:layout_marginVertical="20dp"
                android:visibility="gone"
                android:gravity="center">
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/conmemay"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Không có bình luận nào"
                    android:textSize="20sp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/robotoregular"
                    android:textColor="@color/blurblack"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcView_commentLap_listLapDetail"
                android:layout_margin="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotomedium"
                    android:text="Sản phẩm cùng loại"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    />
                <TextView
                    android:id="@+id/tv_watchMore_listLapDetailScreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotoregular"
                    android:text="Xem thêm  "
                    android:layout_alignParentRight="true"
                    android:textStyle="normal"
                    android:drawableRight="@drawable/icon_watchmore"
                    android:textColor="@color/mainColor"
                    android:textSize="20sp"
                    />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/rcView_sameType_listLapDetailScreen"
                android:layout_marginHorizontal="15dp"
                />

        </LinearLayout>
    </ScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>