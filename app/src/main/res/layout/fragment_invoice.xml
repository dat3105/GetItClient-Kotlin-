<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Screens.Invoice.InvoiceFragment">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_invoiceScreen"
        android:background="@drawable/toolbar_shape"
        app:title="DANH SÁCH ĐƠN HÀNG"
        app:titleTextColor="@color/mainColor"
        />

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="#548AFF"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#548AFF"
        android:id="@+id/tablayout_invoiceScreen">
    </com.google.android.material.tabs.TabLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager_invoiceScreen"/>
</LinearLayout>